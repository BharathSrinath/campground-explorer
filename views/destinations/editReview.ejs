<% layout('layouts/boilerplate') %>

<div class="container mt-5">
  <h2>Edit Your Review for <%= destination.title %></h2>
  <form
    action="/destinations/<%= destination._id %>/reviews/<%= review._id %>?_method=PUT"
    method="POST"
    class="mb-3 validated-form"
    novalidate
  >
    <fieldset class="starability-basic">
      <input type="radio" id="no-rate" class="input-no-rate"
      name="review[rating]" value="1" <% if (review.rating == 1) { %> checked <%
      } %> aria-label="No rating." /> <input type="radio" id="first-rate1"
      name="review[rating]" value="1" <% if (review.rating == 1) { %> checked <%
      } %> />
      <label for="first-rate1" title="Terrible">1 star</label>

      <input type="radio" id="first-rate2" name="review[rating]" value="2" <% if
      (review.rating == 2) { %> checked <% } %> />
      <label for="first-rate2" title="Not good">2 stars</label>

      <input type="radio" id="first-rate3" name="review[rating]" value="3" <% if
      (review.rating == 3) { %> checked <% } %> />
      <label for="first-rate3" title="Average">3 stars</label>

      <input type="radio" id="first-rate4" name="review[rating]" value="4" <% if
      (review.rating == 4) { %> checked <% } %> />
      <label for="first-rate4" title="Very good">4 stars</label>

      <input type="radio" id="first-rate5" name="review[rating]" value="5" <% if
      (review.rating == 5) { %> checked <% } %> />
      <label for="first-rate5" title="Amazing">5 stars</label>
    </fieldset>

    <div class="mb-3">
      <label class="form-label" for="body">Review Text</label>
      <textarea
        class="form-control"
        name="review[body]"
        id="body"
        cols="30"
        rows="3"
        required
      >
        <%= review.body %>
    </textarea>
      <div class="valid-feedback">Looks good!</div>
    </div>

    <div class="d-flex">
      <button class="btn btn-success me-2">Update Review</button>
      <a href="/destinations/<%= destination._id %>" class="btn btn-secondary"
        >Back to Destination</a>
    </div>
  </form>
</div>

<link rel="stylesheet" href="/stylesheets/stars.css" />
